<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Text" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/black</item>
    <item name="android:hyphenationFrequency">normal</item>
  </style>

  <style name="Text.XL">
    <item name="android:textSize">34sp</item>
    <item name="lineHeight">41sp</item>
  </style>

  <style name="Text.XL.Reg">
    <item name="android:textFontWeight">400</item>
  </style>

  <style name="Text.M">
    <item name="android:textSize">17sp</item>
    <item name="lineHeight">22sp</item>
    <item name="maxLines">2</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="Text.M.Med">
    <item name="android:textFontWeight">500</item>
  </style>

  <style name="DividerHorizontal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/systemLines</item>
  </style>
</resources>